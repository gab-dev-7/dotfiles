# dunstrc - Minimal "Fresh Start" Config

[global]
include = /home/gabriel/.cache/wal/dunstrc
    # Set your font
    font = JetBrains Mono Nerd 10

    # Allow markup so icons and bolds work
    allow_markup = yes

    # Where to show notifications
    origin = top-right
    offset = 10x10
    
    # How long to show them
    show_age_threshold = 60
    
    # Don't stack notifications, just show one at a time
    stack_duplicates = false
    
    # Hide the "..." if the message is too long
    ellipsis = end

[frame]
    width = 300
    color = "#33ccff"
    frame_width = 2
    
[urgency_low]
    background = "#282828"
    foreground = "#ebdbb2"
    timeout = 5

[urgency_normal]
    background = "#282828"
    foreground = "#ebdbb2"
    timeout = 10

[urgency_critical]
